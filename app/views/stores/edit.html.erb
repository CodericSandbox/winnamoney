<% title "Winnamoney | My information" %>

<% content_for :header do %>
	<% if virtual_office? %>
		Virtual Office
	<% else %>
		Back Office
	<% end %>
<% end %>

<% content_for :sidebar do %>
	<p>
		<%= link_to	"Back Store Information", user_path(@store.user) + "#storeinfo" %>
	</p>
<% end %>

<h2>My information</h2>
<% form_for @store do |f| %>
  <%= error_messages_for :store %>
  <p>
    <%= f.label :name, "Store Location" %><br />
    http://<%= f.text_field :name  %>.winnnamoney.com
  </p>
  <p>
    <%= f.label :language, "Language" %><br />
    <%= f.select :language, Store::LANGUAGES  %>
  </p>
  <p> 
    <%= f.label :positioning, "Positioning" %><br />
    <%= f.select :positioning, Store::POSITIONING %>
  </p>
  <p><%= f.submit "Update" %></p>

<% end %>
