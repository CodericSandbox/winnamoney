<% title "Winnamoney | My Referrals" %>
<div id="content">
	<h1>My Referrals</h1>

	<p>
		Listando <b><%= @stores.size %> de <%= @stores.total_entries %></b> Clientes
	</p>
	<table>
	  <tr>
	    <th>Cliente</th>
	    <th>Tienda</th>
		<th>Status</th>
	  </tr>
	  <% for store in @stores %>
	    <tr>
			<td><%= h store.user.full_name %></td>
			<td><%= h store.name %></td>
			<td><%= h store.status %></td>
	    </tr>
	  <% end %>
	</table>
	<p>
		<%= will_paginate @stores %>
	</p>

	<p>
		<%= link_to	"New Client", new_store_path %>
	</p>
	
</div>
<div style="clear:both"></div>
