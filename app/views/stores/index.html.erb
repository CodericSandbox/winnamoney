<% title "Winnamoney | My Referrals" %>

<% content_for :header do %>
	Virtual Office
<% end %>

<% content_for :sidebar do %>
	<p>
		<%= link_to	"New Referral", new_store_path %>
	</p>
<% end %>
<div id="virtual_office">
	<h2>My Referrals</h2>
	<% unless @stores.empty? %>
		<p>
			Listing <b><%= @stores.size %> of <%= @stores.total_entries %></b> Referrals
		</p>
		<table class="tabla internal">
		  <tr>
		    <th>Client</th>
		    <th>Store</th>
			<th>Status</th>
		  </tr>
		  <% for store in @stores %>
		    <tr>
				<td><%= h store.user.full_name %></td>
				<td><%= h store.name %></td>
				<td><%= h store.status %></td>
		    </tr>
		  <% end %>
		</table>
		<p>
			<%= will_paginate @stores %>
		</p>
	<% else %>
		<p>You have no referrals yet.</p>
	<% end %>
	
</div>
<div style="clear:both"></div>
