<% title "Winnamoney | Register" %>
<% if @current_user.nil?%>
	<h1>My Store</h1>
<%else%>
	<h1>Store Information</h1>
	<% if params[:parent_id] %>
		<small>* The position you selected for your referral will be taken as soon as payment is complete</small>
	<% elsif @current_user and !@current_user.is_admin? %>
		<small>* This user will be positioned automatically with your selected logic (<%= @current_store.positioning.titleize %>)</small>
	<% end %>
<% end %>

<%= render :partial => 'form' %>