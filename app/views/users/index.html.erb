<% title "Tiendas" %>
<div id="categories">
	<h2>Filter Users</h2>
	<% form_tag users_path, :method => :get do %>
		<p>
			<%= label_tag :keyword, "Keyword" %><br />
			<%= text_field_tag :keyword, params[:keyword] %>
		</p>
		<p>
			<%= label_tag :status %><br />
			<%= select_tag :status, all_statuses_option + options_from_collection_for_select(Store::STATUS, "second", "first", params[:status]) %>
		</p>
		<p>
			<%= submit_tag "Filter" %>
		</p>
	<% end %>
</div>
<div id="content">
	<h1>Clientes</h1>

	<p>
		Listando <b><%= @users.size %> de <%= @users.total_entries %></b> Clientes
	</p>
	<table>
	  <tr>
	    <th>Cliente</th>
	    <th>Tienda</th>
		<th>Status</th>
	    <th>Editar</th>
	    <th>Borrar</th>
	  </tr>
	  <% for user in @users %>
	    <tr>
			<td><%= link_to h(user.full_name), user %></td>
			<td><%= h user.store.name %></td>
			<td><%= h user.store.status %></td>
			<td><%= link_to "Editar", edit_user_path(user) %></td>
	      	<td><%= link_to "Borrar", user, :confirm => 'Estas seguro?', :method => :delete %></td>
	    </tr>
	  <% end %>
	</table>
	<p>
		<%= will_paginate @users %>
	</p>

	<p>
		<%= link_to	"Nuevo Cliente", new_store_path %>
	</p>
</div>
<div style="clear:both"></div>
