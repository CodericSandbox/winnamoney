<% title "Winnamoney | Checkout | Payment Information" %>
<h1>Payment Information</h1>
<h2>Items in your Cart</h2>

<table id="cart_detail">
	<tr>
		<th>Name</th>
		<th>Quantity</th>
		<th>Unit Price</th>
		<th>Price</th>
	</tr>
	
	<% @cart.items.each do |item|%>
		<tr id="<%= item.id %>">
			<td><%= truncate(item.name,30) %></td>
			<td><%= item.quantity %></td>
			<td><%= number_to_currency item.unit_price %></td>
			<td><%= number_to_currency item.price %><%= "<sub>Tax included</sub>" if item.taxes_apply?  %></td>
		</tr>
	<% end %>
	
</table>

<h2>Order Summary</h2>
<table>
	<tr>
		<td>Total</td>
		<td><strong><%= number_to_currency @cart.price %></strong></td>
	</tr>
</table>

<h2>Billing Address</h2>
<%= render :partial => 'address',:object => @cart.billing  %>

<h2>Shipping Address</h2>
<%= render :partial => 'address',:object => @cart.shipping  %>

<%= render :partial => 'payment_types', :locals => {:credit_card_order => @credit_card_order, :deposit_order => @deposit_order, :contact_later_order => @contact_later_order, :express_checkout_order => @express_checkout_order, :user => @user} %>