<% title "Winnamoney | Complete Payment"%>

<% content_for :sidebar do%>
	<p>
		<%= link_to	"Back to Store Information", user_path(@order.user) +  "#storeinfo" %>
	</p>
<% end %>

<% form_for [@order,@payment] do |f| %>
	<p>
		<%= f.label :payment_method %> <br />
		<%= f.select :payment_method, options_from_collection_for_select(Payment::METHODS, "second","first") %>
		<%= f.hidden_field :amount %>
	</p>
	<p>
		<%= f.submit "Complete Payment" %>
	</p>
<% end %>